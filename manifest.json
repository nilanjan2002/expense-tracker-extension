{
    "manifest_version": 3,
    "name": "Expense Tracker",
    "version": "1.0.0",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "48": "images/icon-48.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ]
}